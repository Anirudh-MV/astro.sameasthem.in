---
import Layout from '../../layouts/Layout.astro';
import ContactForm from '../../components/Contact/ContactForm.astro';
import ContactInfo from '../../components/Contact/ContactInfo.astro';

const contactEmail = "sameasthemband@gmail.com";
---

<Layout title="Contact Us" description="Get in touch with Same as Them">
  <main class="max-w-7xl mx-auto px-4 py-24">
    <div class="max-w-2xl mx-auto text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 glow">
        Contact Us
      </h1>
      <p class="text-xl text-gray-300">
        Have questions or want to collaborate? We're here to help!
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8 lg:gap-12 items-start max-w-6xl mx-auto">
      <ContactInfo
        email={contactEmail}
        image="/images/album-detail.webp"
      />
      <ContactForm />
    </div>
  </main>
</Layout>