---
interface Props {
  title: string;
  content: string;
  image?: string;
  imageAlt?: string;
  reverse?: boolean;
}

const { title, content, image, imageAlt = '', reverse = false } = Astro.props;
---

<section class="py-20 px-4">
  <div class:list={[
    "max-w-6xl mx-auto grid gap-8",
    image ? "md:grid-cols-2" : "md:grid-cols-1",
    reverse ? "md:grid-flow-dense" : ""
  ]}>
    {image && (
      <div class="relative aspect-square">
        <img
          src={image}
          alt={imageAlt}
          class="w-full h-full object-contain rounded-lg shadow-lg"
        />
        <div class="absolute inset-0 bg-violet-glow/10 rounded-lg"></div>
      </div>
    )}
    
    <div class:list={[
      "flex flex-col justify-center",
      reverse ? "md:col-start-1" : ""
    ]}>
      <h2 class="text-3xl md:text-4xl font-bold mb-6 glow">
        {title}
      </h2>
      <div class="prose prose-invert" set:html={content} />
    </div>
  </div>
</section>