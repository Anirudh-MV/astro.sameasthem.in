---
interface Props {
  src: string;
  alt: string;
  caption?: string;
  index: number;
}

const { src, alt, caption, index } = Astro.props;
---

<div 
  class="gallery-item aspect-[3/4] cursor-pointer overflow-hidden rounded-lg transition-transform hover:scale-[1.02] duration-300"
  data-index={index}
>
  <img
    src={src}
    alt={alt}
    class="w-full h-full object-cover transition-transform hover:scale-105 duration-500"
    loading="lazy"
  />
  {caption && (
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 hover:opacity-100 transition-opacity duration-300">
      <p class="absolute bottom-0 left-0 right-0 p-4 text-white text-sm">
        {caption}
      </p>
    </div>
  )}
</div>