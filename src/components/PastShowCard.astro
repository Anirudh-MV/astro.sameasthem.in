---
import { formatShowDate } from '../utils/date-formatter';

interface Props {
  venue: string;
  date: Date;
  location: string;
  description?: string;
  review?: string;
  images?: string[];
}

const { venue, date, location, description, review, images } = Astro.props;
---

<article class="bg-deep-blue rounded-lg overflow-hidden shadow-lg">
  {images && images[0] && (
    <div class="aspect-video overflow-hidden">
      <img
        src={images[0]}
        alt={`${venue} event`}
        class="w-full h-full object-cover"
      />
    </div>
  )}
  
  <div class="p-6">
    <h2 class="text-2xl font-bold hover-glow">{venue}</h2>
    <p class="text-violet-glow mt-2">{formatShowDate(date)}</p>
    <p class="text-gray-300 mt-2">{location}</p>
    
    {description && (
      <p class="text-gray-300 mt-4 border-t border-violet-glow/20 pt-4">
        {description}
      </p>
    )}
    
    {review && (
      <div class="mt-4 border-t border-violet-glow/20 pt-4">
        <h3 class="text-lg font-semibold text-violet-glow mb-2">Show Highlights</h3>
        <p class="text-gray-300 italic">{review}</p>
      </div>
    )}
  </div>
</article>