<div
  class="bg-deep-blue/50 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-violet-glow/10"
>
  <form
    class="space-y-8"
    action="https://api.web3forms.com/submit"
    method="POST"
  >
    <input
      type="hidden"
      name="access_key"
      value="384b31c9-13b1-4ec3-9624-394ceab5d399"
    />
    <div>
      <label for="name" class="block text-sm font-medium text-violet-glow mb-2"
        >Name</label
      >
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full px-4 py-3 bg-deep-blue border border-violet-glow/30 rounded-lg focus:outline-none focus:border-violet-glow focus:ring-1 focus:ring-violet-glow transition-colors duration-200"
      />
    </div>

    <div>
      <label for="email" class="block text-sm font-medium text-violet-glow mb-2"
        >Email</label
      >
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-4 py-3 bg-deep-blue border border-violet-glow/30 rounded-lg focus:outline-none focus:border-violet-glow focus:ring-1 focus:ring-violet-glow transition-colors duration-200"
      />
    </div>

    <div>
      <label
        for="subject"
        class="block text-sm font-medium text-violet-glow mb-2">Subject</label
      >
      <input
        type="text"
        id="subject"
        name="subject"
        required
        class="w-full px-4 py-3 bg-deep-blue border border-violet-glow/30 rounded-lg focus:outline-none focus:border-violet-glow focus:ring-1 focus:ring-violet-glow transition-colors duration-200"
      />
    </div>

    <div>
      <label
        for="message"
        class="block text-sm font-medium text-violet-glow mb-2">Message</label
      >
      <textarea
        id="message"
        name="message"
        rows="6"
        required
        class="w-full px-4 py-3 bg-deep-blue border border-violet-glow/30 rounded-lg focus:outline-none focus:border-violet-glow focus:ring-1 focus:ring-violet-glow transition-colors duration-200 resize-none"
      ></textarea>
    </div>

    <button
      type="submit"
      class="w-full px-6 py-4 bg-violet-accent hover:bg-violet-glow text-white font-medium rounded-lg transition-all duration-300 transform hover:scale-[1.02] hover:shadow-[0_0_15px_theme('colors.violet-glow')]"
    >
      Send Message
    </button>
    <input
      type="hidden"
      name="redirect"
      value="https://sameasthem.in/contact"
    />
  </form>
</div>

<script>
  const form = document.querySelector("form");
  if (form) {
    // Get the base URL of the current domain
    const baseURL = `${window.location.origin}/contact?submitted`;

    // Set the form's action attribute to the base URL
    let baseInput = form.querySelector('input[name="redirect"]');
    if (baseInput) {
      baseInput.value = baseURL;
    }

    form.appendChild(baseInput);
  }
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.has("submitted")) {
    alert("Your form has been submitted!");
    // Remove the "submitted" parameter from the URL
    urlParams.delete("submitted");
    const newUrl = `${window.location.origin}${window.location.pathname}?${urlParams.toString()}`;
    window.history.replaceState(null, "", newUrl);
  }
</script>
