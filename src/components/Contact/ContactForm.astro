<div class="bg-deep-blue/50 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-violet-glow/10">
  <form class="space-y-8">
    <div>
      <label for="name" class="block text-sm font-medium text-violet-glow mb-2">Name</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full px-4 py-3 bg-deep-blue border border-violet-glow/30 rounded-lg focus:outline-none focus:border-violet-glow focus:ring-1 focus:ring-violet-glow transition-colors duration-200"
      />
    </div>

    <div>
      <label for="email" class="block text-sm font-medium text-violet-glow mb-2">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-4 py-3 bg-deep-blue border border-violet-glow/30 rounded-lg focus:outline-none focus:border-violet-glow focus:ring-1 focus:ring-violet-glow transition-colors duration-200"
      />
    </div>

    <div>
      <label for="subject" class="block text-sm font-medium text-violet-glow mb-2">Subject</label>
      <input
        type="text"
        id="subject"
        name="subject"
        required
        class="w-full px-4 py-3 bg-deep-blue border border-violet-glow/30 rounded-lg focus:outline-none focus:border-violet-glow focus:ring-1 focus:ring-violet-glow transition-colors duration-200"
      />
    </div>

    <div>
      <label for="message" class="block text-sm font-medium text-violet-glow mb-2">Message</label>
      <textarea
        id="message"
        name="message"
        rows="6"
        required
        class="w-full px-4 py-3 bg-deep-blue border border-violet-glow/30 rounded-lg focus:outline-none focus:border-violet-glow focus:ring-1 focus:ring-violet-glow transition-colors duration-200 resize-none"
      ></textarea>
    </div>

