---
interface Props {
  email: string;
  image: string;
  contact: string;
}

const { email, image, contact } = Astro.props;
---

<div class="bg-deep-blue/50 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-violet-glow/10 space-y-8">
  <div class="relative aspect-[4/3] rounded-xl overflow-hidden shadow-lg">
    <img
      src={image}
      alt="Contact Us"
      class="w-full h-full object-cover transform hover:scale-105 transition-transform duration-700"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-midnight/90 via-midnight/30 to-transparent"></div>
  </div>
  
  <div class="text-center space-y-4">
    <div class="space-y-2">
      <h3 class="text-2xl font-semibold glow">Get in Touch</h3>
      <p class="text-gray-300">We'd love to hear from you!</p>
    </div>
    
    <div class="pt-2">
      <a
        href={`mailto:${email}`}
        class="inline-block text-lg text-violet-glow hover:text-violet-accent transition-colors duration-200 hover-glow"
      >
        {email}
      </a><br />
      <a
        href={`tel:${contact}`}
        class="inline-block text-lg text-violet-glow hover:text-violet-accent transition-colors duration-200 hover-glow"
      >
        {contact}
      </a>
    </div>
  </div>
</div>